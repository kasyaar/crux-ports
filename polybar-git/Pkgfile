# Description:
# URL:
# Maintainer:
# Depends on:

name=polybar
version=git
release=1
source=()

build() {
    cd $PKGMK_SOURCE_DIR
    if [ ! -d $name ]; then
        git clone --recursive https://github.com/polybar/polybar.git
    else
		cd $name && git pull
	fi
    cp -r $PKGMK_SOURCE_DIR/$name $SRC
    cd $SRC/$name
    git checkout master
    mkdir build && cd build
    cmake ../ -DCMAKE_INSTALL_PREFIX=/usr
    make
    make DESTDIR=$PKG install
}
